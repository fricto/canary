<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.citytechinc.monitoring</groupId>
    <artifactId>osgi-service-monitor</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>
    <name>CITYTECH, Inc. OSGi Service Monitor</name>
    <description>Bundle containing a set of OSGi services useful for basic monitoring of (other) OSGi services.</description>

    <modules>
        <module>osgi-service-monitor-core</module>
        <module>osgi-service-monitor-ui</module>
    </modules>

    <scm>
        <connection>scm:git:git@github.com:Citytechinc/osgi-service-monitor.git</connection>
        <url>https://github.com/Citytechinc/osgi-service-monitor</url>
        <developerConnection>scm:git:git@github.com:Citytechinc/osgi-service-monitor.git</developerConnection>
    </scm>

    <distributionManagement>
        <repository>
            <id>citytech-public</id>
            <name>CITYTECH Public Releases</name>
            <url>http://nexus.citytech.ctmsp.com/content/repositories/public-releases</url>
        </repository>
        <snapshotRepository>
            <id>citytech-snapshots</id>
            <name>CITYTECH Public Snapshots</name>
            <url>http://nexus.citytech.ctmsp.com/content/repositories/public-snapshots</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>citytech-public</id>
            <url>http://nexus.citytech.ctmsp.com/content/groups/public</url>
        </repository>
    </repositories>

    <properties>

        <core.name>osgi-service-monitor-core</core.name>

        <!-- plugins -->
        <compiler.version>1.6</compiler.version>
        <compiler.plugin.version>2.3.2</compiler.plugin.version>
        <exec.plugin.version>1.2</exec.plugin.version>
        <scr.plugin.version>1.13.0</scr.plugin.version>
        <gmaven.version>1.4</gmaven.version>
        <gmaven.provider.version>1.8</gmaven.provider.version>
        <felix.bundle.plugin.version>2.3.6</felix.bundle.plugin.version>
        <xml.plugin.version>1.0</xml.plugin.version>
        <site.plugin.version>3.0</site.plugin.version>
        <project.info.plugin.version>2.4</project.info.plugin.version>
        <javadoc.plugin.version>2.8</javadoc.plugin.version>
        <checkstyle.plugin.version>2.6</checkstyle.plugin.version>
        <pmd.plugin.version>2.5</pmd.plugin.version>
        <surefire.plugin.version>2.11</surefire.plugin.version>
        <failsafe.plugin.version>2.11</failsafe.plugin.version>
        <m2e.plugin.version>1.0.0</m2e.plugin.version>
        <assembly.plugin.version>2.2.1</assembly.plugin.version>
        <sling.plugin.version>2.1.0</sling.plugin.version>
        <release.plugin.version>2.2.2</release.plugin.version>
        <deploy.plugin.version>2.4</deploy.plugin.version>
        <jaxws.plugin.version>2.1</jaxws.plugin.version>
        <cqcomponent.plugin.version>1.1.5</cqcomponent.plugin.version>

        <groovy.version>2.1.7</groovy.version>
    </properties>

</project>
